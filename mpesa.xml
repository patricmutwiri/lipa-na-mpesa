	<creationDate>20 1 2016</creationDate>
	<version>v1</version>
	<author>Patrick</author>
	<authorEmail>patwiri@gmail.com</authorEmail>
	<authorUrl>http://patric.xyz</authorUrl>
	<copyright>(C) 2010-2030 Ps_ SOFTWARE. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<description>This plugin enables you to setup your Mpesa payment system</description>
	<files>
		<filename plugin="mpesa">mpesa.php</filename>
		<filename>mpesa_end.php</filename>
	</files>
	<params addpath="/components/com_hikashop/params">
		<param name="pluginoptions" type="pluginoptions" default="plugin" label="hikashop" description="HikaShop options" />
	</params>
	<config>
		<fields name="params" addfieldpath="/components/com_hikashop/fields">
			<fieldset name="basic">
				<field id="pluginoptions" name="pluginoptions" type="pluginoptions" label="hikashop" description="HikaShop options" />
			</fieldset>
		</fields>
	</config>
</extension>
